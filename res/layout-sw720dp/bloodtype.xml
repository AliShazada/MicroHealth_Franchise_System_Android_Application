<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#add8e6"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editText_TestDate_bloodType"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_below="@+id/text_HEPB"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:hint="Test Date "
        android:textSize="40dp" >
    </EditText>

    <Spinner
        android:id="@+id/spinner1_blood_type"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/editText_TestDate_bloodType"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:entries="@array/bloodtype_blood_arrays"
        android:prompt="@string/leucocyte_Prompt" />

    <EditText
        android:id="@+id/details_bloodType"
        android:layout_width="fill_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/spinner1_blood_type"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:hint="Remarks (Optional)"
        android:textSize="40dp" />

    <Button
        android:id="@+id/save_bloodType"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/details_bloodType"
        android:layout_marginBottom="20dp"
        android:text="Save"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Skip_bloodtype"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/details_bloodType"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="Skip"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_add_TestDate_bloodType"
        android:layout_alignLeft="@+id/editText_TestDate_bloodType"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="Test Date :"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_add_TestDate_bloodType"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/details_bloodType"
        android:layout_alignTop="@+id/editText_TestDate_bloodType"
        android:text="ADD"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_HEPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Blood Type and RH Status"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold" />

</RelativeLayout>