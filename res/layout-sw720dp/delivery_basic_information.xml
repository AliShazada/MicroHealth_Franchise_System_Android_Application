<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#add8ee"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/autofill_outcome_dbi"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/editText_delDate_dbi"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:hint="Outcome :"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/auto_duration_dbi"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/autofill_outcome_dbi"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:hint="Duration : "
        android:textSize="40dp" />

    <Button
        android:id="@+id/button_save_dbi"
        android:layout_width="250sp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="25dp"
        android:text="Save"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_discard_dbi"
        android:layout_width="250sp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:text="Back"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_delDate_dbi"
        android:layout_width="550dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView_DBinfo"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="250dp"
        android:hint="Delivery Date "
        android:textSize="40dp" >

    </EditText>

    <TextView
        android:id="@+id/textView_DBinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Delivery Basic Information"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_add_deldate_dbi"
        android:layout_width="105dp"
        android:layout_height="95dp"
        android:layout_alignRight="@+id/autofill_outcome_dbi"
        android:layout_below="@+id/textView_DBinfo"
        android:layout_marginTop="250dp"
        android:background="@drawable/calender_icon" />

</RelativeLayout>