<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#add8ee"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textView_postnatal_patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_postnatal_alerts"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="150dp"
        android:text="Postnatal Alerts"
        android:textColor="#000000"
        android:textSize="45sp"
        android:textStyle="bold" />
    
     <TextView
         android:id="@+id/textView_message"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView_postnatal_patientName"
         android:layout_marginLeft="35dp"
         android:layout_marginRight="35dp"
         android:layout_marginTop="50dp"
         android:text="Delivery of this patient is not done. Current status is due to prenatal alerts."
         android:textColor="#000000"
         android:textSize="45sp" />

    <Button
        android:id="@+id/button_save_postnatal_alerts"
        android:layout_width="250sp"
        android:layout_height="100sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="Save"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_back_postnatal_alerts"
        android:layout_width="250sp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="40dp"
        android:text="Back"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_postnatal_alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Postnatal Alerts"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold" />

</RelativeLayout>