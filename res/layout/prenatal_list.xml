<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#add8e6" >

    <TextView
        android:id="@+id/text_add_mother"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Prenatal List"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_NormalPatient"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/text_add_mother"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="74dp"
        android:background="#006000"
        android:text="Normal Patient(s)"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_complicatedPatient"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/button_NormalPatient"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="#FFA500"
        android:text="Complicated Patient(s)"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_emergencyPatient"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/button_complicatedPatient"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="#FF0000"
        android:text="Emergency Patient(s)"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_back_prenatal_list"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Back"
        android:textSize="22dp"
        android:textStyle="bold" />

</RelativeLayout>